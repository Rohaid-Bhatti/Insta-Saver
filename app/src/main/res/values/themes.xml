<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstaDownloader" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--  for the selected color effect in the bottom navigation bar  -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- for changing the text in the app bar -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/sf_pro_rounded_medium</item>
    </style>

    <!--  for changing the font of the bottom navigation bar & navigation drawer  -->
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/sf_pro_rounded_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- for the circular shape of the image view of the profile -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- for changing the color of the switch -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/titleColor</item>
        <item name="colorSwitchThumbNormal">@color/SwitchOffColor</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="Theme.InstaDownloader" parent="Base.Theme.InstaDownloader" />
</resources>